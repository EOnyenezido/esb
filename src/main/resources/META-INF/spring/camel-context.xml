<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xmlns:broker="http://activemq.apache.org/schema/core"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
         http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd
         http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <!-- import the other spring xml files -->
    <import resource="classpath:META-INF/spring/camel-cxf.xml"/>
<!--     <import resource="classpath:META-INF/spring/camel-jms.xml"/> -->
    
    <bean id="spfUSRoute" class="esb.demo_SPF_MPFS_MPFA_using_camel_cxf_amq.SPF_US"/>
    <bean id="spfDSRoute" class="esb.demo_SPF_MPFS_MPFA_using_camel_cxf_amq.SPF_DS"/>
    <bean id="mpfsUSRoute" class="esb.demo_SPF_MPFS_MPFA_using_camel_cxf_amq.MPFS_US"/>
    <bean id="topengDSRoute" class="esb.demo_SPF_MPFS_MPFA_using_camel_cxf_amq.TOPENG_DS"/>

    <!-- initialize camel context via spring -->
    <camelContext id="camel" trace="false" xmlns="http://camel.apache.org/schema/spring">
		<!-- Custom variables -->
    	<propertyPlaceholder id="properties" location="classpath:test-env.properties"/>

        <routeBuilder ref="spfUSRoute" />
        <routeBuilder ref="spfDSRoute" />
        <routeBuilder ref="mpfsUSRoute" />
        <routeBuilder ref="topengDSRoute" />

    </camelContext>

</beans>
